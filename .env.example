# Backend Configuration Example
# Copy this file to .env and configure according to your setup

# Server config
PORT = your_port_number
# Example: PORT = 3000

# DB config
DB_HOST = your_database_host # Example: DB_HOST = localhost
DB_PORT = your_database_port # Example: DB_PORT = 5432
DB_USER = your_username # Example: DB_USER = myuser
DB_PASSWORD = your_password # Example: DB_PASSWORD = mypassword
DB_NAME = your_database # Example: DB_NAME = mydatabase

# JWT config
JWT_SECRET = your_jwt_secret_key_min_64_characters_long_for_security 
JWT_EXPIRES_IN = 1h # Example: JWT_EXPIRES_IN = 2h (2 hours)
# Note: JWT_EXPIRES_IN can be in seconds (s), minutes (m), hours (h), or days (d)
SESSION_TIMEOUT = 3600000 # 1 hour in milliseconds
# Example: SESSION_TIMEOUT = 7200000 (2 hours in milliseconds)


# Bcrypt config
BCRYPT_ROUNDS = your_bcrypt_rounds # Example: BCRYPT_ROUNDS = 12

